<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="413dp"
            android:layout_height="636dp" android:id="@+id/container"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.9"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/btn3"
            app:layout_constraintVertical_bias="0.0">
    </LinearLayout>
    <Button
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1"
            tools:layout_editor_absoluteY="655dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toStartOf="@+id/btn3"
            android:layout_marginEnd="24dp" app:layout_constraintHorizontal_bias="0.48"/>
    <Button
            android:text="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toEndOf="@+id/btn3" android:layout_marginStart="8dp"
            tools:layout_editor_absoluteY="655dp" app:layout_constraintHorizontal_bias="0.785"/>
    <Button
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/btn3"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn1"/>
</androidx.constraintlayout.widget.ConstraintLayout>